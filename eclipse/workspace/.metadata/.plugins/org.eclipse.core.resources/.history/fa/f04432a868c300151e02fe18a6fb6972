
public class Sorting {

import java.util.Arrays;
import java.util.Comparator;

	// 完成 main 方法
	public static void main(String[] args) {

		int[] scores = { 89, -23, 64, 91, 119, 52, 73 };
		sortScores(scores, 3);
	}

	public static void sortScores (int[] arr, int limit) {
	        int[] b = Arrays.sort(arr, new DescendingComparator());
	        System.out.println("考试成绩的前三名为：");
	        for (int i = 0, l = Math.min(b.length, limit); i < l; i++) {
	            System.out.println(b[i]);           
	        }
	    }

}
class DescendingComparator implements Comparator<Interger> {

	@Override
	public int compare(Interger o1, Interger o2) {
		// TODO Auto-generated method stub
		return o2 - o1;
	}

}
